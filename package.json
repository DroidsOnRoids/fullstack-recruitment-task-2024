  "scripts": {
    "prebuild": "rimraf dist && yarn run generate:metadata",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint -c .eslintrc.js  \"{src,apps,libs,test}/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "vitest run --config ./test/vitest.config.e2e.mts",
    "test:smoke-tests": "vitest run --config ./smoke-tests/vitest.config.smoke-tests.mts",
    "generate:metadata": "ts-node ./bin/generateMetadata.ts",
    "migration:autogenerate": "npm run typeorm migration:generate",
    "migration:create": "npm run typeorm migration:create",
    "migration:down": "npm run typeorm migration:revert",
    "migration:up": "npm run typeorm migration:run",
    "typeorm": "typeorm-ts-node-commonjs -d ormconfig.ts",
    "seed:products": "ts-node scripts/seed-products.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.3",
