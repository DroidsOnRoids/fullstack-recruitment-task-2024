    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.1",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "superagent": "^8.1.2",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0",
    "unplugin-swc": "^1.4.4",
    "vitest": "^1.2.2",
    "winston": "^3.11.0",
    "winston-loggly-bulk": "^3.3.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
